<%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true, html: { id: 'signup_form' }) do |f| %>
  <div class="form-group">
    <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: 'First name' %>
    <small class="text-danger"><%= resource.errors[:first_name].to_sentence if resource.errors[:first_name] %></small>
  </div>
  <div class="form-group">
    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
    <small class="text-danger"><%= resource.errors[:last_name].to_sentence if resource.errors[:last_name] %></small>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class: 'form-control' %>
    <small class="text-danger"><%= resource.errors[:email].to_sentence if resource.errors[:email] %></small>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: 'form-control' %>
    <small class="text-danger"><%= resource.errors[:password].to_sentence if resource.errors[:password] %></small>
  </div>
  <%= f.submit "Sign up", class: 'btn btn-default btn-register' %>
<% end %>
