<%= render partial: 'shared/secondary_nav', locals: { active: :vehicles } %>
<div class="container">
  <div class="row">
    <%= render partial: 'shared/vehicle_nav', locals: { active: :basic } %>
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          Your RV
          <%= link_to "View RV listing", vehicle_path(@vehicle), class: "pull-right txt-small" %>
        </div>
        <div class="panel-body">
            <%= form_for(@vehicle, url: vehicle_path(@vehicle), html: { method: :put }) do |f| %>
              <div class="row">
                <div class="col-md-12 ">
                  <div class="form-group checkbox">
                    <%= f.check_box :active %>
                    <%= f.label :active %>
                  </div>
                  <hr/>
                </div>
                <div class="col-md-6 select">
                  <div class="form-group">
                    <label>Vehicle Type</label>
                    <%= f.select :vehicle_type, Vehicle::TYPES, prompt: 'Select...', class: 'form-control' %>
                  </div>
                </div>
                <div class="col-md-6 select">
                  <div class="form-group">
                    <label>Accommodates</label>
                    <%= f.select :accommodates, Vehicle::PASSENGERS, prompt: 'Select...', class: 'form-control' %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 select">
                  <div class="form-group">
                    <label>Listing Name</label>
                    <%= f.text_field :listing_name, placeholder: 'Be clear and descriptive', class: 'form-control' %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Summary</label>
                    <%= f.text_area :summary, rows: 5, placeholder: 'Tell us about your vehicle!', class: 'form-control' %>
                  </div>
                </div>
              </div>
              <div class="actions">
                <%= f.submit "Save", class: "btn btn-primary", data: { disable_with: "Please wait..." } %>
              </div>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
