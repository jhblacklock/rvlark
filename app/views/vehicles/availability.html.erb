<%= render partial: 'shared/secondary_nav', locals: { active: :vehicles } %>
<div class="container">
  <div class="row">
    <%= render partial: 'shared/vehicle_nav', locals: { active: :availability } %>
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          Your RV Availability
          <%= link_to "View RV listing", vehicle_path(@vehicle), class: "pull-right txt-small" %>
        </div>
        <div class="panel-body">
          <h4>Select days you can't rent your vehicle.</h4>
          <p>Right now, guests can book any day. You can always come back to your calendar to update availability.</p>
          <div class="calendar_container clearfix">
            <div id="calendar">
            </div>
          </div>
          <div class="row spacer">
            <div class="col-md-12">
            <%= form_for(@vehicle, url: vehicle_path(@vehicle, section: 'availability'), html: { method: :put }) do |f| %>
               <div class="row">
                  <div class="col-md-4">
                    <div class="form-group">
                      <label>Minimum Stay</label>
                      <%= f.text_field :minimum_stay, placeholder: 'e.g. 3', class: 'form-control' %>
                      <p class="hint">nights</p>
                  </div>
                  <div class="actions">
                    <%= f.submit "Save", class: "btn btn-primary", data: { disable_with: "Please wait..." } %>
                  </div>
                </div>
              </div>
            <% end %>
            </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
