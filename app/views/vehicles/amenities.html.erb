<%= render partial: 'shared/secondary_nav', locals: { active: :vehicles } %>
<div class="container">
  <div class="row">
    <%= render partial: 'shared/vehicle_nav', locals: { active: :amenities } %>
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          Your RV Amenities
          <%= link_to "View RV listing", vehicle_path(@vehicle), class: "pull-right txt-small" %>
        </div>
        <div class="panel-body">
            <%= form_for(@vehicle, url: vehicle_path(@vehicle, section: 'amenities'), html: { method: :put }) do |f| %>
             <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Features</label>
                    <div class='checkboxes'>
                      <%= f.collection_check_boxes(:amenity_ids, Amenity.features.select(:id, :name), :id, :name) do |b| %>
                        <div class='checkbox'>
                          <%= b.check_box %>
                          <%= b.label %>
                        </div>
                      <% end %>
                    </div>
                    <hr/>
                    <label>Safety</label>
                    <div class='checkboxes'>
                      <%= f.collection_check_boxes(:amenity_ids, Amenity.safety.select(:id, :name), :id, :name) do |b| %>
                        <div class='checkbox'>
                          <%= b.check_box %>
                          <%= b.label %>
                        </div>
                      <% end %>
                    </div>
                    <hr/>
                    <label>Kitchen</label>
                    <div class='checkboxes'>
                      <%= f.collection_check_boxes(:amenity_ids, Amenity.kitchen.select(:id, :name), :id, :name) do |b| %>
                        <div class='checkbox'>
                          <%= b.check_box %>
                          <%= b.label %>
                        </div>
                      <% end %>
                    </div>
                    <hr/>
                    <label>Utilities</label>
                    <div class='checkboxes'>
                      <%= f.collection_check_boxes(:amenity_ids, Amenity.utilities.select(:id, :name), :id, :name) do |b| %>
                        <div class='checkbox'>
                          <%= b.check_box %>
                          <%= b.label %>
                        </div>
                      <% end %>
                    </div>
                    <hr/>
                    <label>Tech</label>
                    <div class='checkboxes'>
                      <%= f.collection_check_boxes(:amenity_ids, Amenity.tech.select(:id, :name), :id, :name) do |b| %>
                        <div class='checkbox'>
                          <%= b.check_box %>
                          <%= b.label %>
                        </div>
                      <% end %>
                    </div>
                    <hr/>
                    <label>Extras</label>
                    <div class='checkboxes'>
                      <%= f.collection_check_boxes(:amenity_ids, Amenity.extras.select(:id, :name), :id, :name) do |b| %>
                        <div class='checkbox'>
                          <%= b.check_box %>
                          <%= b.label %>
                        </div>
                      <% end %>
                    </div>
                </div>
              </div>
            </div>
              <div class="actions">
                <%= f.submit "Save", class: "btn btn-primary", data: { disable_with: "Please wait..." } %>
              </div>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
